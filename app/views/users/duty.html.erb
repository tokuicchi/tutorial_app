<% provide(:title, '出勤中社員一覧') %>
<h1>出勤中社員一覧</h1>

<div>
  <table class = "table-bordered table-condensed">
    <tr>
      <th>社員番号</th>
      <th>名前</th>
    </tr>
    
    <% @users.each do |user| %>
      <% user.attendances.each do |attendance| %>
        <% if attendance.started_at.present? && attendance.finished_at.nil? && attendance.worked_on == Date.today %> <!--出勤中の社員-->
          <tr>
            <td><%= user.employee_number %></td>
            <td><%= user.name %></td>
          </tr>
        <% end %>
      <% end %>
    <% end %>
  </table>
</div>